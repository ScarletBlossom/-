{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build All CPP Files",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",               // 生成调试信息
        "-o", "program",    // 输出文件名
        "${workspaceFolder}\\*.cpp"  // 编译所有cpp文件
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$gcc"
    }
  ]
}